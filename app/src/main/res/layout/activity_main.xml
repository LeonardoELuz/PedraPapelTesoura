<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/jogador1Ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/jogador1Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador 1:"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/imagensLy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pedraIm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/pedra" />

            <ImageView
                android:id="@+id/papelIm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/papel" />

            <ImageView
                android:id="@+id/tesouraIm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/tesoura" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/botoesLy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/botoesRg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/pedraBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"/>
                <RadioButton
                    android:id="@+id/papelBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"/>

                <RadioButton
                    android:id="@+id/tesouraBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jogador2Ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/jogador1Ly"
        android:orientation="vertical"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/jogador2Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador 2:"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jogador1Ly"
            tools:ignore="MissingConstraints,NotSibling" />

        <LinearLayout
            android:id="@+id/imagens2Ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pedra2Im"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/pedra" />

            <ImageView
                android:id="@+id/papel2Im"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/papel" />

            <ImageView
                android:id="@+id/tesoura2Im"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/tesoura" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/botoes2Ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/botoes2Rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/pedra2Bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"/>
                <RadioButton
                    android:id="@+id/papel2Bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"/>

                <RadioButton
                    android:id="@+id/tesoura2Bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/resultadoLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/jogador2Ly"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/computadorTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:text="Computador: " />

        <TextView
            android:id="@+id/statusComputadorTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/computadorIm"
            android:layout_height="50dp"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:visibility="invisible"
            android:src="@mipmap/pedra"/>

        <TextView
            android:id="@+id/resultadoTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </LinearLayout>

    <Button
        android:id="@+id/jogarBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jogar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>